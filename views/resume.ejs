    <script>

        async function generatePDF() {
            try {
                const response = await fetch('/generate-pdf', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    // Pass template literal content as JSON data
                    body: JSON.stringify({ content: document.getElementById('container').innerHTML })
                });
                if (response.ok) {
                    // Download the generated PDF file
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'resume.pdf';
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    window.URL.revokeObjectURL(url);
                    console.log("I am in resume.ejs file ")
                } else {
                    console.error('Failed to generate PDF');
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }
            


        const btn = document.querySelector(".submit");
        const div = document.getElementById("first-div");
        const container = document.getElementById("container");

        

        const form = document.getElementById("from-data");

        form.addEventListener("submit", async (e) => {
            e.preventDefault(); // Prevent default form submission behavior


            const fullname = document.getElementById("fullname").value;
            const field = document.getElementById("Field").value;
            const saddress = document.getElementById("saddress").value;
            const email = document.getElementById("email").value;
            const phone = document.getElementById("phone").value;
            const dob = document.getElementById("dob").value;
            const address = document.getElementById("address").value;
            const education = document.getElementById("education").value;
            const experience = document.getElementById("experience").value;

            const skills = [];
            const checkboxes = document.querySelectorAll('input[name="skills[]"]:checked');
            checkboxes.forEach((checkbox) => {
                skills.push(checkbox.value);
            });

           
            

            container.innerHTML += `
                <section class="section">
                    <b align="center"><h1>${fullname}</h1>
                    <p class="s-add">${saddress}</p>
                    <p class="s-email">${email} | ${phone}</p>
                    <hr>
                </section>
                
                <section class="section">
                    <h2 class="section-title" align="center">Summary</h2>
                    <hr>
                    <p class="s-summ">A motivated and results-oriented individual with a strong background in ${field} and a <br> passion for creating efficient and user-friendly applications.</p>
                </section>
                
                <section class="section">
                    <h2 class="section-title" align="center">Skills</h2>
                    <div class="skills">
                        ${skills.map(skill => `<span class="skill" >${skill}</span>`).join(' ')}
                    </div>
                </section>
                <hr>
                
                <section class="section">
                    <h2 class="section-title" align="center">Experience</h2>
                    <p>${experience}</p>
                </section>
                <hr>
                <section class="section">
                    <h2 class="section-title" align="center">Education</h2>
                    <p>${education}</p>
                </section>
                <hr>
                <div id="button"> <button onclick="generatePDF()"> Generate by PdfHUB </button> </div>
            `
            ;
            
            div.style.display = "none"
        });

        

    </script>

